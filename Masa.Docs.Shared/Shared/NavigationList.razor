<MList Dense
       Expand
       Nav
       Linkage>
    @foreach (var item in Items)
    {
        if (item.HasChildren)
        {
            <NavigationListGroup Item="item" />
        }
        else
        {
            <NavigationListItem Item="item" />
        }
    }

</MList>

