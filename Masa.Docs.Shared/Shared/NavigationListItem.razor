@inject I18n I18n

<MListItem Href="@Href"
           Class=""
           Color="primary">
    @if (Item.Icon is not null)
    {
        <MListItemIcon>
            <MIcon>@Item.Icon</MIcon>
        </MListItemIcon>
    }

    <MListItemContent>
        <MListItemTitle>@I18n.T(Item.Title)</MListItemTitle>
    </MListItemContent>
</MListItem>

@code {

    [Parameter]
    public NavItem Item { get; set; } = null!;

    [Parameter]
    public string BaseSegment { get; set; } = null!;

    private string Href => $"{BaseSegment}/{Item.Segment}";

}
