@inject I18n I18n

<MListItem Href="@Href"
           Class=""
           Color="primary">
    @if (Item.Icon is not null)
    {
        <MListItemIcon>
            <MIcon>@Item.Icon</MIcon>
        </MListItemIcon>
    }

    <MListItemContent>
        <MListItemTitle>@Item.Title</MListItemTitle>
        @if (I18n.Culture.Name != "en-US")
        {
            <MListItemSubtitle>@I18n.T(Item.Title)</MListItemSubtitle>
        }
    </MListItemContent>
</MListItem>

@code {

    [Parameter]
    public NavItem Item { get; set; } = null!;

    [Parameter]
    public string BaseSegment { get; set; } = null!;

    private string Href => $"{BaseSegment}/{Item.Segment}";

}
